        function getResponsiveImageUrl(imagePath, width, height = 0) {
            if (!imagePath) return '';
            
            // Cloudinary transformation URL oluÅŸtur
            const baseUrl = imagePath.split('/upload/')[0] + '/upload/';
            const publicId = imagePath.split('/upload/')[1];
            
