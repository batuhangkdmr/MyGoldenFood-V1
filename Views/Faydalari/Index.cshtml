@using Microsoft.Extensions.Localization
@model IEnumerable<MyGoldenFood.Models.BenefitCategory>

@{
    ViewData["Title"] = "Donuk Gıda Faydaları | Dondurulmuş Gıda Sağlık Avantajları | My Golden Food";
    Layout = "_Layout";
}

<!-- SEO Meta Etiketleri -->
<head>
    <meta name="description" content="Donuk gıda faydaları ve dondurulmuş gıdaların sağlık üzerindeki avantajları. Flash freezing teknolojisi ile korunan besin değeri, vitamin ve mineral korunumu. My Golden Food kalitesi ile sağlıklı beslenme.">
    <meta name="keywords" content="donuk gıda faydaları, dondurulmuş gıda sağlık avantajları, flash freezing teknolojisi, dondurulmuş meyve faydaları, dondurulmuş sebze faydaları, besin değeri korunumu, vitamin mineral korunumu">
    <meta name="author" content="My Golden Food">
    <meta name="robots" content="index, follow">
    <meta property="og:title" content="Donuk Gıda Faydaları | Dondurulmuş Gıda Sağlık Avantajları">
    <meta property="og:description" content="Donuk gıda faydaları ve dondurulmuş gıdaların sağlık üzerindeki avantajları. Flash freezing teknolojisi ile korunan besin değeri.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://mygoldenfood.com/Faydalari/Index">
    <meta property="og:image" content="https://res.cloudinary.com/dbhogeepn/image/upload/v1743859767/mygolden_foood_a25y69.png">
    <link rel="canonical" href="https://mygoldenfood.com/Faydalari/Index" />
</head>

<!-- Ana H1 Başlık - SEO için kritik -->
<h1 class="seo-main-title" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    Donuk Gıda Faydaları | Dondurulmuş Gıdaların Sağlık Avantajları | Flash Freezing Teknolojisi ile Besin Değeri Korunumu
</h1>

<div class="container" style="margin-top: 100px;">
    <h2 class="text-center text-white mb-4">@Html.T("BenefitCategories")</h2>
    
    <!-- Kategoriler -->
    <div class="row" id="categoriesSection">
        @foreach (var category in Model)
        {
            <div class="col-md-4 col-6 text-center mb-4">
                <div class="category-card" onclick="goToDetails(@category.Id)" style="cursor: pointer;">
                    <div class="image-container">
                        <img src="@category.ImagePath" 
                             alt="@category.Name | Donuk Gıda Faydaları | Dondurulmuş Gıda Sağlık Avantajları" 
                             class="category-image" 
                             title="@category.Name - Donuk Gıda Faydaları" />
                    </div>
                    <h3 class="mt-3">@category.Name</h3>
                    <p class="text-muted">@category.Benefits.Count fayda</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* 🌟 Görsel kapsayıcı */
    .image-container {
        width: 100%;
        height: 250px;
        overflow: hidden;
        border-radius: 10px;
        background-color: #000;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* 🌟 Görsel düzenleme */
    .category-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    /* 🌟 Kart düzeni */
    .category-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        padding: 10px;
        background-color: #121928;
        border-radius: 10px;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(255, 255, 255, 0.2);
    }

    /* 🌟 📱 Mobil Görünüm */
    @@media (max-width: 768px) {
        .col-6 {
            width: 50%;
            padding: 5px;
        }

        .image-container {
            height: 180px;
        }

        h3 {
            font-size: 1.1rem;
        }
    }
</style>

<script>
    function goToDetails(categoryId) {
        // Details sayfasına yönlendir
        window.location.href = '/Faydalari/Details/' + categoryId;
    }
</script>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}
