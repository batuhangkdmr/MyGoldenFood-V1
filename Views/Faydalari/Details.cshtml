<style>
    /* Grid Layout */
    .benefit-grid {
        min-height: 600px;
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 20px;
        justify-content: flex-start;
        align-items: start;
    }

    /* Eğer fayda sayısı 3'ten azsa, ortalama yap */
    .benefit-grid:has(.benefit-card:nth-child(1):nth-last-child(1)),
    .benefit-grid:has(.benefit-card:nth-child(1):nth-last-child(2)) {
        display: flex;
        justify-content: start;
        gap: 20px;
    }

    /* Kart Tasarımı */
    .benefit-card {
        overflow: hidden;
        text-align: center;
        border-radius: 15px;
        background-color: rgba(0, 0, 0, 0);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

    .benefit-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    /* Görsel Kapsayıcı */
    .image-container {
        width: 100%;
        height: 250px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #000;
        overflow: hidden;
        border-radius: 15px;
    }

    /* Görseller */
    .benefit-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
        object-position: center;
        transition: transform 0.3s ease;
    }

    .image-container:hover .benefit-image {
        transform: scale(1.1);
    }

    /* Fayda Adı */
    .benefit-name-container {
        padding: 15px;
        background-color: rgba(0, 0, 0, 0);
        border-radius: 0 0 15px 15px;
        color: #fff;
    }

    .benefit-name {
        margin: 0;
        font-size: 1.2rem;
        color: #fff;
    }

    .content {
        flex: 1;
        padding-top: 5%;
    }

    /* Modal İçeriği */
    .modal-content {
        background: rgba(0, 0, 0, 0.8);
        color: white;
        border: none;
        border-radius: 10px;
        transform: scale(0.7);
        transition: transform 0.3s ease-out;
    }

    .modal.show .modal-content {
        transform: scale(1);
    }
    

    


    /* Modal Başlığı */
    .modal-title-with-line {
        position: relative;
        display: inline-block;
        padding-bottom: 10px;
        font-size: 1.2rem;
        color: #FFD700;
        margin-bottom: 15px;
    }

    .modal-title-with-line::after {
        content: "";
        display: block;
        width: 100%;
        height: 2px;
        background: white;
        position: absolute;
        bottom: 0;
        left: 0;
    }

    /* Tablet görünümü (768px - 1024px) */
    @@media (max-width: 1024px) and (min-width: 769px) {
        .benefit-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
    
    /* Mobilde 2 sütun */
    @@media (max-width: 768px) {
        .benefit-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .image-container {
            height: 180px;
        }

        .benefit-name {
            font-size: 1rem;
        }

        .container .text-center {
            margin-top: 55%;
        }

        h1 {
            margin-top: 7pc;
        }
    }



    .modal-body p {
        white-space: pre-line;
        font-size: 1rem;
        line-height: 1.6;
        text-align: left;
        margin-bottom: 10px;
    }

    .modal-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 15px;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".image-container").forEach(item => {
        item.addEventListener("click", function () {
            let name = this.getAttribute("data-name");
            let description = this.getAttribute("data-description");

            if (!name || !description) {
                alert("Fayda detayları eksik!");
                return;
            }

            // Mevcut scroll pozisyonunu kaydet
            const currentScrollPos = window.pageYOffset || document.documentElement.scrollTop;

            document.getElementById('detailsModalLabel').textContent = name;
            document.getElementById('detailsModalDescription').innerHTML = description.replace(/\n/g, "<br>");

            var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
            
            // Modal açıldıktan sonra scroll pozisyonunu geri yükle
            modal.show();
            
            // Modal tamamen açıldıktan sonra scroll pozisyonunu geri yükle
            setTimeout(() => {
                window.scrollTo(0, currentScrollPos);
            }, 100);
        });
    });
        

    });
</script>

