<style>
    /* Arka plan resmi */
    body {
        background: url('https://res.cloudinary.com/dbhogeepn/image/upload/f_auto,q_auto,w_1920,h_1080,c_fill/moon31-min_lq11rc.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    /* Genel konteyner */
    .contact-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90vh;
    }

    /* Şeffaf kutu */
    .contact-box {
        display: flex;
        background: rgba(255, 255, 255, 0.2); /* Şeffaf beyaz */
        padding: 20px;
        border-radius: 10px;
        backdrop-filter: blur(10px); /* Arka planı bulanıklaştırır */
    }

    /* Form ve iletişim bilgileri */
    .contact-form, .contact-info {
        padding: 20px;
        border-radius: 10px;
        width: 100%;
    }

        /* Form alanı */
        .contact-form h3, .contact-info h3 {
            color: white;
            text-align: center;
        }

        .contact-form input, .contact-form textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
        }

        /* Buton */
        .contact-form button {
            width: 100%;
            padding: 10px;
            background: black;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            transition: 0.3s;
        }

            .contact-form button:hover {
                background: black;
            }

    /* İletişim bilgileri */
    .contact-info {
        background: rgba(0, 0, 0, 0.5); /* Şeffaf siyah */
        color: white;
    }

        .contact-info p {
            display: flex;
            align-items: center;
            font-size: 14px;
        }

        .contact-info i {
            margin-right: 10px;
        }
    /* 📱 Mobil Uyumlu Görünüm */
    @@media (max-width: 768px) {
        .contact-container {
            flex-direction: column;
            align-items: center;
            height: 110%;
            padding: 20px;
            margin-top: 15px;
        }

        .contact-box {
            flex-direction: column;
            padding: 15px;
        }

        .contact-form, .contact-info {
            width: 100%;
            padding: 10px;
        }

            .contact-form input, .contact-form textarea {
                padding: 8px;
                font-size: 14px;
            }

            .contact-form h3, .contact-info h3 {
                font-size: 1.5rem;
            }

            .contact-form button {
                padding: 10px;
                font-size: 1rem;
            }

            .contact-info p {
                font-size: 13px;
            }
    }

</style>

@if (!string.IsNullOrEmpty(ViewBag.Uyari))
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: "@(ViewBag.Uyari.Contains("başarıyla") ? "Başarılı" : "Hata")",
                text: decodeURIComponent("@Uri.EscapeDataString(ViewBag.Uyari)"),
                icon: "@(ViewBag.Uyari.Contains("başarıyla") ? "success" : "error")",
                showConfirmButton: false,
                timer: 2000 // 2 saniye sonra otomatik kapanacak
            });

        @if (ViewBag.Uyari.Contains("başarıyla"))
        {
            <text>
                        setTimeout(function () {
                            window.location.href = "/iletisim"; // 2 saniye sonra yönlendir
                        }, 2000);
            </text>
        }
        });
    </script>
}

<!-- İletişim Formu -->
