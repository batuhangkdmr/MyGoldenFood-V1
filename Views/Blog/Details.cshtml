@model MyGoldenFood.Models.Blog
@{
    ViewData["Title"] = $"{Model.Title} | Donuk Gıda Blog | My Golden Food";
    Layout = "_Layout";
}

<!-- SEO Meta Etiketleri -->
<head>
    <meta name="description" content="@(string.IsNullOrEmpty(Model.SeoDescription) ? Model.Summary : Model.SeoDescription)">
    <meta name="keywords" content="@(string.IsNullOrEmpty(Model.SeoKeywords) ? "donuk gıda, dondurulmuş gıda, flash freezing, " + Model.Category : Model.SeoKeywords)">
    <meta name="author" content="@Model.Author">
    <meta name="robots" content="index, follow">
    <meta property="og:title" content="@Model.Title">
    <meta property="og:description" content="@(string.IsNullOrEmpty(Model.SeoDescription) ? Model.Summary : Model.SeoDescription)">
    <meta property="og:type" content="article">
    <meta property="og:url" content="https://mygoldenfood.com/Blog/Details/@Model.Id">
    <meta property="og:image" content="@(string.IsNullOrEmpty(Model.ImagePath) ? "https://res.cloudinary.com/dbhogeepn/image/upload/f_auto,q_70,w_1200,fl_immutable_cache/v1743859767/mygolden_foood_a25y69.png" : Model.ImagePath)">
    <meta property="article:published_time" content="@Model.CreatedDate.ToString("yyyy-MM-ddTHH:mm:ssZ")">
    @if (Model.UpdatedDate.HasValue)
    {
        <meta property="article:modified_time" content="@Model.UpdatedDate.Value.ToString("yyyy-MM-ddTHH:mm:ssZ")">
    }
    <meta property="article:author" content="@Model.Author">
    <meta property="article:section" content="@Model.Category">
    <link rel="canonical" href="https://mygoldenfood.com/Blog/Details/@Model.Id">
    
    <!-- Schema Markup - Article -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Article",
        "name": "@Model.Title",
        "description": "@(string.IsNullOrEmpty(Model.SeoDescription) ? Model.Summary : Model.SeoDescription)",
        "image": "@(string.IsNullOrEmpty(Model.ImagePath) ? "https://res.cloudinary.com/dbhogeepn/image/upload/f_auto,q_70,w_1200,fl_immutable_cache/v1743859767/mygolden_foood_a25y69.png" : Model.ImagePath)",
        "articleSection": "Donuk Gıda Blog",
        "articleBody": "@Html.Raw(Model.Content.Replace("\"", "\\\"").Replace("\n", " ").Replace("\r", ""))",
        "author": {
            "@@type": "Organization",
            "name": "My Golden Food"
        },
        "publisher": {
            "@@type": "Organization",
            "name": "My Golden Food",
            "logo": {
                "@@type": "ImageObject",
                "url": "https://res.cloudinary.com/dbhogeepn/image/upload/v1743859767/mygolden_foood_a25y69.png"
            }
        },
        "datePublished": "@Model.CreatedDate.ToString("yyyy-MM-ddTHH:mm:ssZ")",
        "dateModified": "@(Model.UpdatedDate?.ToString("yyyy-MM-ddTHH:mm:ssZ") ?? Model.CreatedDate.ToString("yyyy-MM-ddTHH:mm:ssZ"))",
        "mainEntityOfPage": {
            "@@type": "WebPage",
            "@@id": "https://mygoldenfood.com/Blog/Details/@Model.Id"
        }
    }
    </script>
    
    <!-- Schema Markup - Organization -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Organization",
        "name": "My Golden Food",
        "description": "Donuk gıda blog yazıları ve dondurulmuş gıda ürünleri tedarikçisi",
        "url": "https://mygoldenfood.com",
        "logo": "https://res.cloudinary.com/dbhogeepn/image/upload/v1743859767/mygolden_foood_a25y69.png",
        "contactPoint": {
            "@@type": "ContactPoint",
            "telephone": "+90 533 635 24 58",
            "contactType": "Customer Service",
            "areaServed": "TR",
            "availableLanguage": ["Türkçe", "English"]
        }
    }
    </script>
</head>

<!-- Ana H1 Başlık - SEO için kritik -->
<h1 class="seo-main-title" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    @Model.Title | Donuk Gıda Blog Yazısı | Flash Freezing Teknolojisi | My Golden Food
</h1>

<!-- Donuk Gıda Blog Detay SEO Açıklaması (Gizli) -->
<div class="seo-blog-details-info" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    <h2>@Model.Title - Donuk Gıda Blog Yazısı</h2>
    <p>
        <strong>Donuk gıda</strong> sektörü hakkında detaylı bilgi içeren blog yazımız. 
        <strong>Flash Freezing Teknolojisi</strong> ve dondurulmuş gıda ürünleri hakkında 
        kapsamlı bilgiler. <strong>350 gram paketlerde</strong> sunulan ürünlerimiz hakkında 
        detaylı açıklamalar.
    </p>
    <h3>Blog Kategorisi: @Model.Category</h3>
    <p>
        Bu blog yazısı <strong>@Model.Category</strong> kategorisinde yer almaktadır. 
        Donuk gıda sektöründe uzman bilgiler ve güncel gelişmeler.
    </p>
</div>

<!-- Blog Detay Sayfası İçeriği -->
<div class="blog-details-container">
    <div class="blog-details-wrapper">
        <!-- Breadcrumb -->
        <nav class="blog-breadcrumb">
            <ol>
                <li><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                <li><a href="@Url.Action("Index", "Blog")">Blog</a></li>
                <li class="active">@Model.Title</li>
            </ol>
        </nav>

        <!-- Blog Başlığı -->
        <h1 class="blog-details-title">@Model.Title</h1>

        <!-- Blog Meta Bilgileri -->
        <div class="blog-details-meta">
            <div class="meta-left">
                <div class="meta-item">
                    <i class="fas fa-calendar"></i>
                    <span>@Model.CreatedDate.ToString("dd MMMM yyyy")</span>
                </div>
                @if (Model.UpdatedDate.HasValue)
                {
                    <div class="meta-item">
                        <i class="fas fa-edit"></i>
                        <span>Güncellendi: @Model.UpdatedDate.Value.ToString("dd MMMM yyyy")</span>
                    </div>
                }
            </div>
            <div class="meta-right">
                <div class="meta-item">
                    <i class="fas fa-eye"></i>
                    <span>@Model.ViewCount görüntülenme</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.Category))
                {
                    <span class="category-badge">@Model.Category</span>
                }
            </div>
        </div>

            <!-- Blog Resmi -->
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                var cloudinaryService = ViewBag.CloudinaryService as MyGoldenFood.Services.CloudinaryService;
                <div class="blog-details-image">
                    <picture>
                        <source media="(max-width: 768px)" 
                                srcset="@cloudinaryService?.GetMobileImageUrl(Model.ImagePath)">
                        <source media="(max-width: 1200px)" 
                                srcset="@cloudinaryService?.GetTabletImageUrl(Model.ImagePath)">
                        <img src="@cloudinaryService?.GetDesktopImageUrl(Model.ImagePath)" 
                             alt="@Model.Title - Donuk Gıda Blog Yazısı"
                             loading="lazy" />
                    </picture>
                </div>
            }

            <!-- Blog Özeti -->
            @if (!string.IsNullOrEmpty(Model.Summary))
            {
                <div class="blog-summary-box">
                    <h3>Özet</h3>
                    <p>@Model.Summary</p>
                </div>
            }

            <!-- Blog İçeriği -->
      @*       <div class="blog-details-content">
                @Html.Raw(Model.Content)
            </div> *@

            <!-- Blog Etiketleri -->
            @if (!string.IsNullOrEmpty(Model.Tags))
            {
                <div class="blog-tags-section">
                    <h3>Etiketler:</h3>
                    <div class="tags-container">
                        @foreach (var tag in Model.Tags.Split(','))
                        {
                            <span class="tag-badge">@tag.Trim()</span>
                        }
                    </div>
                </div>
            }

            <!-- Geri Dön Butonu -->
            <div class="back-button-container">
                <a href="@Url.Action("Index", "Blog")" class="back-button">
                    <i class="fas fa-arrow-left"></i>
                    <span>Tüm Blog Yazılarına Dön</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Blog Detay Kategorileri SEO Açıklaması (Gizli) -->
<div class="seo-blog-details-categories" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    <h2>Blog Yazısı Kategorisi ve İçeriği</h2>
    <p>
        Bu blog yazısı <strong>@Model.Category</strong> kategorisinde yer almaktadır. 
        <strong>Donuk gıda</strong> sektörü hakkında detaylı bilgiler ve 
        <strong>Flash Freezing Teknolojisi</strong> açıklamaları içermektedir.
    </p>
</div>

<!-- Dark Mode Blog Details CSS -->
<style>
    /* Ana Container Stilleri */
    .blog-details-container {
        margin-top: 100px;
        min-height: 100vh;
        background: black;
        padding: 40px 20px;
    }

    .blog-details-wrapper {
        max-width: 900px;
        margin: 0 auto;
        background: linear-gradient(145deg, #2a2a2a, #1f1f1f);
        border-radius: 25px;
        padding: 40px;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
    }

    /* Breadcrumb Stilleri */
    .blog-breadcrumb {
        margin-bottom: 30px;
    }

    .blog-breadcrumb ol {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
        flex-wrap: wrap;
    }

    .blog-breadcrumb li {
        color: #a0a0a0;
        font-size: 0.9rem;
    }

    .blog-breadcrumb li:not(:last-child)::after {
        content: '>';
        margin-left: 15px;
        color: #667eea;
    }

    .blog-breadcrumb a {
        color: #667eea;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .blog-breadcrumb a:hover {
        color: #ffffff;
    }

    .blog-breadcrumb .active {
        color: #ffffff;
        font-weight: 600;
    }

    /* Blog Başlık */
    .blog-details-title {
        font-size: 2.8rem;
        font-weight: 800;
        color: #ffffff;
        line-height: 1.2;
        text-align: center;
        margin-bottom: 30px;
        background: linear-gradient(135deg, #ffffff 0%, #667eea 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 30px rgba(102, 126, 234, 0.3);
    }

    /* Meta Bilgiler */
    .blog-details-meta {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        background: rgba(0, 0, 0, 0.3);
        padding: 25px;
        border-radius: 20px;
        margin-bottom: 30px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
    }

    .meta-left, .meta-right {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 12px;
        color: #d0d0d0;
        font-size: 0.95rem;
    }

    .meta-item i {
        color: #667eea;
        font-size: 1.1rem;
        width: 20px;
        text-align: center;
    }

    .category-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* Blog Resmi */
    .blog-details-image {
        text-align: center;
        margin-bottom: 30px;
        border-radius: 20px;
        overflow: hidden;
   /*      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.1); */
    }

    .blog-details-image img {
        max-width: 100%;
        max-height: 700px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .blog-details-image:hover img {
        transform: scale(1.02);
    }

    /* Özet Kutusu */
    .blog-summary-box {
        background: rgba(0, 0, 0, 0.4);
        padding: 25px;
        border-radius: 20px;
        margin-bottom: 30px;
        border: 1px solid rgba(102, 126, 234, 0.3);
        backdrop-filter: blur(10px);
    }

    .blog-summary-box h3 {
        color: #667eea;
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 15px;
        text-align: center;
    }

    .blog-summary-box p {
        color: #d0d0d0;
        line-height: 1.7;
        font-size: 1.05rem;
        margin: 0;
        text-align: center;
    }

    /* Blog İçeriği */
    .blog-details-content {
        background: rgba(0, 0, 0, 0.3);
        padding: 30px;
        border-radius: 20px;
        margin-bottom: 30px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        color: #d0d0d0;
        line-height: 1.8;
        font-size: 1.05rem;
    }

    .blog-details-content h2 {
        color: #ffffff;
        font-weight: 700;
        margin: 2rem 0 1rem 0;
        padding-bottom: 0.5rem;
        border-bottom: 3px solid #667eea;
        font-size: 1.8rem;
    }

    .blog-details-content h3 {
        color: #ffffff;
        font-weight: 600;
        margin: 1.5rem 0 1rem 0;
        font-size: 1.4rem;
    }

    .blog-details-content p {
        color: #d0d0d0;
        line-height: 1.8;
        margin-bottom: 1rem;
        font-size: 1.05rem;
    }

    .blog-details-content ul, .blog-details-content ol {
        margin-bottom: 1rem;
        padding-left: 20px;
    }

    .blog-details-content li {
        color: #d0d0d0;
        line-height: 1.8;
        margin-bottom: 0.5rem;
    }

    .blog-details-content strong {
        color: #ffffff;
        font-weight: 600;
    }

    .blog-details-content a {
        color: #667eea;
        text-decoration: none;
        border-bottom: 1px solid #667eea;
        transition: all 0.3s ease;
    }

    .blog-details-content a:hover {
        color: #ffffff;
        border-bottom-color: #ffffff;
    }

    /* Etiketler */
    .blog-tags-section {
        background: rgba(0, 0, 0, 0.4);
        padding: 25px;
        border-radius: 20px;
        margin-bottom: 30px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
    }

    .blog-tags-section h3 {
        color: #667eea;
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        justify-content: start;
    }

    .tag-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

    .tag-badge:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    /* Geri Dön Butonu */
    .back-button-container {
        text-align: center;
        margin-top: 40px;
    }

    .back-button {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 15px 30px;
        border-radius: 25px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 12px;
        font-weight: 600;
        font-size: 1.05rem;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
    }

    .back-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .back-button:hover::before {
        left: 100%;
    }

    .back-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(102, 126, 234, 0.6);
        color: white;
        text-decoration: none;
    }

    .back-button i {
        font-size: 1.1rem;
        transition: transform 0.3s ease;
    }

    .back-button:hover i {
        transform: translateX(-5px);
    }

    /* Responsive Tasarım */
    @@media (max-width: 768px) {
        .blog-details-wrapper {
            padding: 25px;
        }

        .blog-details-title {
            font-size: 2.2rem;
        }

        .blog-details-meta {
            flex-direction: column;
            gap: 20px;
        }

        .meta-left, .meta-right {
            align-items: start;
        }

        .blog-details-content {
            padding: 20px;
        }

        .blog-details-image img {
            max-height: 600px;
        }
    }

    @@media (max-width: 576px) {
        .blog-details-container {
            padding: 20px 15px;
        }

        .blog-details-wrapper {
            padding: 20px;
        }

        .blog-details-title {
            font-size: 1.8rem;
        }

        .blog-details-content {
            padding: 15px;
        }

        .back-button {
            padding: 12px 25px;
            font-size: 1rem;
        }

        .blog-details-image img {
            max-height: 500px;
        }
    }
</style>
