@model MyGoldenFood.Models.RecipeCategory

<div class="modal-header">
    <h5 class="modal-title">Yeni Tarif Kategorisi Ekle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="createRecipeCategoryForm" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Name" class="form-label">Kategori Adı *</label>
            <input type="text" class="form-control" id="Name" name="Name" required>
        </div>
        
        <div class="mb-3">
            <label for="ParentCategoryId" class="form-label">Ana Kategori</label>
            <select class="form-control" id="ParentCategoryId" name="ParentCategoryId">
                <option value="">Ana Kategori (Seçiniz)</option>
            </select>
            <small class="form-text text-muted">Boş bırakırsanız ana kategori olarak eklenir</small>
        </div>
        
        <div class="mb-3">
            <label for="SortOrder" class="form-label">Sıralama</label>
            <input type="number" class="form-control" id="SortOrder" name="SortOrder" value="0" min="0">
            <small class="form-text text-muted">Küçük sayılar önce görünür (0, 1, 2...)</small>
        </div>
        
        <div class="mb-3">
            <label for="ImageFile" class="form-label">Kategori Görseli</label>
            <input type="file" class="form-control" id="ImageFile" name="ImageFile" accept="image/*">
            <small class="form-text text-muted">Desteklenen formatlar: JPG, PNG, GIF. Maksimum boyut: 5MB</small>
        </div>
        
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>

<script>
    $(document).ready(function() {
        // Ana kategorileri yükle
        loadParentCategories();
        
        $('#createRecipeCategoryForm').on('submit', function(e) {
            e.preventDefault();
            
            var formData = new FormData(this);
            
            $.ajax({
                url: '/Tarifler/CreateCategory',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        Swal.fire('Başarılı!', response.message, 'success');
                        $('#modal').modal('hide');
                        location.reload();
                    } else {
                        Swal.fire('Hata!', response.message, 'error');
                    }
                },
                error: function() {
                    Swal.fire('Hata!', 'Bir hata oluştu!', 'error');
                }
            });
        });
    });
    
    function loadParentCategories() {
        $.ajax({
            url: '/Tarifler/GetParentCategories',
            type: 'GET',
            success: function(categories) {
                var select = $('#ParentCategoryId');
                select.empty();
                select.append('<option value="">Ana Kategori (Seçiniz)</option>');
                
                categories.forEach(function(category) {
                    select.append('<option value="' + category.id + '">' + category.name + '</option>');
                });
            },
            error: function() {
                console.log('Ana kategoriler yüklenemedi');
            }
        });
    }
</script>
