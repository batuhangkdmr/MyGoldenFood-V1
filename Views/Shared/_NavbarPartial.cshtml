@using System.Globalization
@using MyGoldenFood.Services


<style>
    html {
        overflow-y: scroll;
    }

    .main-menu {
        position: fixed;
        width: 100vw; /* Viewport width kullan */
        top: 0;
        left: 0;
        right: 0; /* Sağ kenarı da sabitle */
        z-index: 1000;
        transform: translateZ(0); /* Hardware acceleration */
        will-change: transform; /* Performance optimizasyonu */
    }

    /* Navbar'ın viewport'a sabitlenmesi için */
    .main-menu {
        position: fixed !important;
        left: 0 !important;
        right: 0 !important;
        width: 100vw !important;
        max-width: 100vw !important;
    }

    .navbar .nav-link img {
        margin-right: 5px;
        vertical-align: middle;
    }
    /* Mobilde menü açıldığında görünüm düzeltmesi */
    @@media (max-width: 768px) {
        .main-menu {
            position: fixed !important;
            left: 0 !important;
            right: 0 !important;
            width: 100vw !important;
            max-width: 100vw !important;
        }

        .navbar-collapse {
            background-color: black; /* Menü açıldığında arka plan siyah */
            padding: 10px 15px;
            text-align: left;
            position: relative;
            z-index: 1001; /* Navbar'dan daha yüksek z-index */
        }

        .navbar-nav .nav-item {
            margin: 5px 0;
            text-align: center;
        }

        .navbar-nav {
            align-items: flex-start !important;
        }

        .navbar .nav-link {
            color: #fff !important;
            font-size: 16px;
        }

        .navbar-brand img {
            width: 120px; /* Küçük ekran için logo boyutu */
        }

        .dropdown-menu {
            background-color: #222;
            border: none;
            max-height: 60vh;
            overflow-y: auto;
            overflow-x: hidden;
            padding: 0;
        }

        .dropdown-item {
            color: #fff;
            padding: 10px;
            text-align: start;
        }

        .navbar-nav {
            align-items: flex-start !important;
        }

            .navbar-nav .nav-item {
                width: 100%;
                text-align: left !important;
                padding-left: 10px;
            }

            .navbar-nav .nav-link {
                justify-content: flex-start;
                display: flex;
            }

        .dropdown-item:hover {
            background-color: #444;
        }

        .navbar-toggler {
            border-color: #fff;
            outline: none !important;
            box-shadow: none !important;
            margin-right: 0 !important;
            transition: none !important;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba%28255, 255, 255, 1%29' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }
    }

    /* Samsung SE ve çok küçük ekranlar için */
    @@media (max-width: 375px) {
        .dropdown-menu {
            max-height: 50vh;
            width: 100%;
            left: 0 !important;
            right: 0 !important;
            transform: none !important;
            padding: 0;
        }

        .dropdown-item {
            padding: 8px 10px;
            font-size: 14px;
        }

        .navbar-brand img {
            width: 100px;
        }

        .navbar-nav .nav-link {
            font-size: 14px;
        }
    }

    /* Dropdown scrollbar styling */
    .dropdown-menu::-webkit-scrollbar {
        width: 4px;
    }

    .dropdown-menu::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 2px;
    }

    .dropdown-menu::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 2px;
    }

    .dropdown-menu::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.5);
    }

</style>

<nav class="navbar navbar-expand-md navbar-dark main-menu" id="dynamicNavbar">
    <a class="navbar-brand" href="https://mygoldenfood.com/">
        <img src="https://res.cloudinary.com/dbhogeepn/image/upload/w_150,q_auto:good,dpr_auto,f_auto,fl_immutable_cache/v1738688048/logo-moonlife1_ulf0n3.png"
             width="150px"
             alt="My Golden Food logo"
             loading="lazy">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/">
                    @Html.T("Home").ToUpper(System.Globalization.CultureInfo.CurrentCulture)
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/hakkimizda">
                    @Html.T("About").ToUpper(System.Globalization.CultureInfo.CurrentCulture)
                </a>
            </li>
            <li class="nav-item">
                <a href="/urunler" class="nav-link">
                    @Html.T("Products").ToUpper(System.Globalization.CultureInfo.CurrentCulture)
                </a>
            </li>
            <li class="nav-item">
                <a href="/tariflervefaydalari" class="nav-link">
                    @Html.T("RecipesAndBenefits").ToUpper(System.Globalization.CultureInfo.CurrentCulture)
                </a>
            </li>
            <li class="nav-item">
                <a href="/Blog" class="nav-link">
                    @Html.T("Blog").ToUpper(System.Globalization.CultureInfo.CurrentCulture)
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/iletisim">
                    @Html.T("Contact").ToUpper(System.Globalization.CultureInfo.CurrentCulture)
                </a>
            </li>


            <!-- Dil Seçimi -->
            @{
                var langCookie = Context.Request.Cookies[Microsoft.AspNetCore.Localization.CookieRequestCultureProvider.DefaultCookieName];
                var langCode = "tr";
                if (!string.IsNullOrEmpty(langCookie))
                {
                    var cIndex = langCookie.IndexOf("c=");
                    if (cIndex >= 0)
                    {
                        langCode = langCookie.Substring(cIndex + 2, 2);
                    }
                }
                var languages = new[] {
                    new { Code = "tr", Name = "Türkçe", Flag = "tr.png" },
                    new { Code = "en", Name = "English", Flag = "en.png" },
                    new { Code = "de", Name = "Deutsch", Flag = "de.png" },
                    new { Code = "fr", Name = "Français", Flag = "fr.png" },
                    new { Code = "ru", Name = "Русский", Flag = "ru.png" },
                    new { Code = "ar", Name = "العربية", Flag = "ar.png" },
                    new { Code = "ja", Name = "日本語", Flag = "ja.png" },
                    new { Code = "ko", Name = "한국어", Flag = "ko.png" }
                };
                var selected = languages.FirstOrDefault(l => l.Code == langCode) ?? languages[0];
            }
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="~/images/flags/@selected.Flag" width="20" height="14" alt="@selected.Name">
                    @selected.Name
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="languageDropdown">
                    @foreach (var lang in languages)
                    {
                        <a class="dropdown-item" href="/Language/SetLanguage?culture=@lang.Code&returnUrl=@Context.Request.Path">
                            <img src="~/images/flags/@lang.Flag" width="18" height="12" alt="@lang.Name"> @lang.Name
                        </a>
                    }
                </div>
            </li>
        </ul>
    </div>
</nav>
<!-- Navbar Takip Etme JavaScript -->
<script>
    const navbar = document.getElementById("dynamicNavbar");

    // Navbar'ı viewport'a sabitle
    function fixNavbarPosition() {
        navbar.style.position = 'fixed';
        navbar.style.left = '0';
        navbar.style.right = '0';
        navbar.style.width = '100vw';
        navbar.style.maxWidth = '100vw';
    }

    // Sayfa yüklendiğinde ve resize olduğunda navbar'ı sabitle
    window.addEventListener('load', fixNavbarPosition);
    window.addEventListener('resize', fixNavbarPosition);

    // Navbar artık scroll sırasında gizlenmiyor, sabit kalıyor
    // window.addEventListener("scroll", function () {
    //     let scrollTop = window.pageYOffset || document.documentElement.scrollTop;
    //     if (scrollTop > lastScrollTop) {
    //         navbar.style.top = `-${navbar.offsetHeight}px`; // Aşağı kayınca navbar gizleniyor
    //     } else {
    //         navbar.style.top = "0"; // Yukarı kayınca navbar tekrar görünüyor
    //     }
    //     lastScrollTop = scrollTop;
    //     
    //     // Scroll sırasında da navbar pozisyonunu koru
    //     fixNavbarPosition();
    // });

    // Touch olayları için navbar pozisyonunu koru (sadece navbar alanında)
    document.addEventListener('touchmove', function(e) {
        if (e.target.closest('.main-menu')) {
            fixNavbarPosition();
        }
    });

    document.addEventListener('click', function (event) {
        const navbarToggler = document.querySelector('.navbar-toggler');
        const navbarCollapse = document.querySelector('.navbar-collapse');

        const isNavbarOpen = navbarCollapse.classList.contains('show');
        const isClickInsideNavbar = navbarCollapse.contains(event.target) || navbarToggler.contains(event.target);

        if (isNavbarOpen && !isClickInsideNavbar) {
            navbarToggler.click(); // Menü dışına tıklanınca kapat
        }
    });
</script>

