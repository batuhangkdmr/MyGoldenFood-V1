@model MyGoldenFood.Models.Recipe

<div class="modal-header">
    <h5 class="modal-title">Tarif Düzenle</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="editRecipeForm" enctype="multipart/form-data">
        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
        
        <div class="mb-3">
            <label for="Name" class="form-label">Tarif Adı *</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
        </div>
        
        <div class="mb-3">
            <label for="Content" class="form-label">Tarif İçeriği *</label>
            <textarea class="form-control" id="Content" name="Content" rows="8" required placeholder="Malzemeler ve hazırlanış adımlarını yazın...">@Model.Content</textarea>
        </div>
        
        <div class="mb-3">
            <label for="MainCategoryId" class="form-label">Ana Kategori *</label>
            <select class="form-control" id="MainCategoryId" name="MainCategoryId" required>
                <option value="">Ana Kategori Seçin</option>
            </select>
        </div>
        
        <div class="mb-3">
            <label for="SubCategoryId" class="form-label">Alt Kategori</label>
            <select class="form-control" id="SubCategoryId" name="SubCategoryId">
                <option value="">Alt Kategori Seçin (İsteğe Bağlı)</option>
            </select>
            <small class="form-text text-muted">Ana kategori seçtikten sonra alt kategoriler yüklenecek</small>
        </div>
        
        <!-- Gizli alan - seçilen kategori ID'sini tutar -->
        <input type="hidden" id="RecipeCategoryId" name="RecipeCategoryId" value="@Model.RecipeCategoryId" />
        
        <div class="mb-3">
            <label for="ImageFile" class="form-label">Tarif Görseli</label>
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="mb-2">
                    <img src="@Model.ImagePath" alt="Mevcut görsel" style="max-width: 200px; max-height: 200px;" class="img-thumbnail" />
                </div>
            }
            <input type="file" class="form-control" id="ImageFile" name="ImageFile" accept="image/*">
            <small class="form-text text-muted">Desteklenen formatlar: JPG, PNG, GIF. Maksimum boyut: 5MB</small>
        </div>
        
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </div>
    </form>
</div>

<script>
    $(document).ready(function() {
        // Mevcut kategori bilgisini yükle
        loadCurrentCategoryInfo(@Model.RecipeCategoryId);
        
        // Ana kategori değiştiğinde alt kategorileri yükle
        $('#MainCategoryId').on('change', function() {
            var mainCategoryId = $(this).val();
            loadSubCategories(mainCategoryId);
            updateRecipeCategoryId();
        });
        
        // Alt kategori değiştiğinde gizli alanı güncelle
        $('#SubCategoryId').on('change', function() {
            updateRecipeCategoryId();
        });
        
        $('#editRecipeForm').on('submit', function(e) {
            e.preventDefault();
            
            // Form gönderilmeden önce kategori ID'sini güncelle
            updateRecipeCategoryId();
            
            var formData = new FormData(this);
            
            $.ajax({
                url: '/Tarifler/Edit',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        Swal.fire('Başarılı!', response.message, 'success');
                        $('#modal').modal('hide');
                        location.reload();
                    } else {
                        Swal.fire('Hata!', response.message, 'error');
                    }
                },
                error: function() {
                    Swal.fire('Hata!', 'Bir hata oluştu!', 'error');
                }
            });
        });
    });
    
    function loadCurrentCategoryInfo(currentCategoryId) {
        // Önce ana kategorileri yükle
        $.ajax({
            url: '/Tarifler/GetParentCategories',
            type: 'GET',
            success: function(categories) {
                var select = $('#MainCategoryId');
                select.empty();
                select.append('<option value="">Ana Kategori Seçin</option>');
                
                categories.forEach(function(category) {
                    select.append('<option value="' + category.id + '">' + category.name + '</option>');
                });
                
                // Mevcut kategori bilgisini al
                $.ajax({
                    url: '/Tarifler/GetCategoryInfo',
                    type: 'GET',
                    data: { categoryId: currentCategoryId },
                    success: function(categoryInfo) {
                        if (categoryInfo.isChild) {
                            // Alt kategori ise ana kategoriyi seç
                            $('#MainCategoryId').val(categoryInfo.parentId);
                            // Alt kategorileri yükle
                            loadSubCategories(categoryInfo.parentId);
                            // Alt kategoriyi seç
                            setTimeout(function() {
                                $('#SubCategoryId').val(currentCategoryId);
                            }, 500);
                        } else {
                            // Ana kategori ise direkt seç
                            $('#MainCategoryId').val(currentCategoryId);
                        }
                    },
                    error: function() {
                        console.log('Kategori bilgisi alınamadı');
                    }
                });
            },
            error: function() {
                console.log('Ana kategoriler yüklenemedi');
            }
        });
    }
    
    function loadSubCategories(mainCategoryId) {
        var subSelect = $('#SubCategoryId');
        subSelect.empty();
        subSelect.append('<option value="">Alt Kategori Seçin (İsteğe Bağlı)</option>');
        
        if (!mainCategoryId) {
            return;
        }
        
        $.ajax({
            url: '/Tarifler/GetSubCategories',
            type: 'GET',
            data: { parentId: mainCategoryId },
            success: function(subCategories) {
                subCategories.forEach(function(subCategory) {
                    subSelect.append('<option value="' + subCategory.id + '">' + subCategory.name + '</option>');
                });
            },
            error: function() {
                console.log('Alt kategoriler yüklenemedi');
            }
        });
    }
    
    function updateRecipeCategoryId() {
        var subCategoryId = $('#SubCategoryId').val();
        var mainCategoryId = $('#MainCategoryId').val();
        
        // Alt kategori seçilmişse onu kullan, yoksa ana kategoriyi kullan
        var selectedCategoryId = subCategoryId || mainCategoryId;
        $('#RecipeCategoryId').val(selectedCategoryId);
    }
</script>
