@using Microsoft.Extensions.Localization
@model IEnumerable<MyGoldenFood.Models.Benefit>

@{
    ViewData["Title"] = "Donuk Gıda Faydaları | Dondurulmuş Gıda Sağlık Avantajları | My Golden Food";
    Layout = "_Layout";
}

<!-- SEO Meta Etiketleri -->
<head>
    <meta name="description" content="Donuk gıda faydaları ve dondurulmuş gıdaların sağlık üzerindeki avantajları. Flash freezing teknolojisi ile korunan besin değeri, vitamin ve mineral korunumu. My Golden Food kalitesi ile sağlıklı beslenme.">
    <meta name="keywords" content="donuk gıda faydaları, dondurulmuş gıda sağlık avantajları, flash freezing teknolojisi, dondurulmuş meyve faydaları, dondurulmuş sebze faydaları, besin değeri korunumu, vitamin mineral korunumu">
    <meta name="author" content="My Golden Food">
    <meta name="robots" content="index, follow">
    <meta property="og:title" content="Donuk Gıda Faydaları | Dondurulmuş Gıda Sağlık Avantajları">
    <meta property="og:description" content="Donuk gıda faydaları ve dondurulmuş gıdaların sağlık üzerindeki avantajları. Flash freezing teknolojisi ile korunan besin değeri.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://mygoldenfood.com/Faydalari/Index">
    <meta property="og:image" content="https://res.cloudinary.com/dbhogeepn/image/upload/v1743859767/mygolden_foood_a25y69.png">
    <link rel="canonical" href="https://mygoldenfood.com/Faydalari/Index" />
    
    <!-- Schema Markup - Benefits Collection -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "ItemList",
        "name": "Donuk Gıda Faydaları Koleksiyonu",
        "description": "Dondurulmuş gıdaların sağlık üzerindeki faydaları ve avantajları",
        "url": "https://mygoldenfood.com/Faydalari/Index",
        "numberOfItems": "@Model.Count()",
        "itemListElement": [
            @{
                for (int i = 0; i < Model.Count(); i++)
                {
                    var benefit = Model.ElementAt(i);
                    <text>
                    {
                        "@@type": "ListItem",
                        "position": @(i + 1),
                        "item": {
                            "@@type": "Article",
                            "name": "@benefit.Name",
                            "description": "@benefit.Content",
                            "image": "@benefit.ImagePath",
                            "articleSection": "Donuk Gıda Faydaları",
                            "author": {
                                "@@type": "Organization",
                                "name": "My Golden Food"
                            }
                        }
                    }@(i < Model.Count() - 1 ? "," : "")
                    </text>
                }
            }
        ]
    }
    </script>
    
    <!-- Schema Markup - Organization -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Organization",
        "name": "My Golden Food",
        "description": "Donuk gıda faydaları ve dondurulmuş gıda ürünleri tedarikçisi",
        "url": "https://mygoldenfood.com",
        "logo": "https://res.cloudinary.com/dbhogeepn/image/upload/v1743859767/mygolden_foood_a25y69.png",
        "contactPoint": {
            "@@type": "ContactPoint",
            "telephone": "+90 533 635 24 58",
            "contactType": "Customer Service",
            "areaServed": "TR",
            "availableLanguage": ["Türkçe", "English"]
        }
    }
    </script>
</head>

<!-- Ana H1 Başlık - SEO için kritik -->
<h1 class="seo-main-title" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    Donuk Gıda Faydaları | Dondurulmuş Gıdaların Sağlık Avantajları | Flash Freezing Teknolojisi ile Besin Değeri Korunumu
</h1>

<!-- Donuk Gıda Faydaları SEO Açıklaması (Gizli) -->
<div class="seo-benefits-info" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    <h2>Donuk Gıda Faydaları ve Sağlık Avantajları</h2>
    <p>
        <strong>Donuk gıda</strong> ürünlerimizin sağlık üzerindeki faydalarını keşfedin. 
        <strong>Flash Freezing Teknolojisi</strong> ile korunan dondurulmuş meyve, sebze ve hazır gıdalarımız, 
