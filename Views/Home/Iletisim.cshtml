                <p><i class="fas fa-phone"></i> <strong> @Html.T("Phone")</strong>  <a href="tel:+905336352458" class="text-white">+90 533 635 24 58</a></p>
                <p><i class="fas fa-envelope"></i> <strong> @Html.T("Email")</strong>  <a href="mailto:gokhangokdemir@mygoldenfood.com" class="text-white">gokhangokdemir@mygoldenfood.com</a></p>
