@model MyGoldenFood.Models.Blog
@{
    ViewData["Title"] = $"{Model.Title} | Donuk Gıda Blog | My Golden Food";
    Layout = "_Layout";
}

<!-- SEO Meta Etiketleri -->
<head>
    <meta name="description" content="@(string.IsNullOrEmpty(Model.SeoDescription) ? Model.Summary : Model.SeoDescription)">
    <meta name="keywords" content="@(string.IsNullOrEmpty(Model.SeoKeywords) ? "donuk gıda, dondurulmuş gıda, flash freezing, " + Model.Category : Model.SeoKeywords)">
    <meta name="author" content="@Model.Author">
    <meta name="robots" content="index, follow">
    <meta property="og:title" content="@Model.Title">
    <meta property="og:description" content="@(string.IsNullOrEmpty(Model.SeoDescription) ? Model.Summary : Model.SeoDescription)">
    <meta property="og:type" content="article">
    <meta property="og:url" content="https://mygoldenfood.com/Blog/Details/@Model.Id">
    <meta property="og:image" content="@(string.IsNullOrEmpty(Model.ImagePath) ? "https://res.cloudinary.com/dbhogeepn/image/upload/v1743859767/mygolden_foood_a25y69.png" : Model.ImagePath)">
    <meta property="article:published_time" content="@Model.CreatedDate.ToString("yyyy-MM-ddTHH:mm:ssZ")">
    @if (Model.UpdatedDate.HasValue)
    {
        <meta property="article:modified_time" content="@Model.UpdatedDate.Value.ToString("yyyy-MM-ddTHH:mm:ssZ")">
    }
    <meta property="article:author" content="@Model.Author">
    <meta property="article:section" content="@Model.Category">
    <link rel="canonical" href="https://mygoldenfood.com/Blog/Details/@Model.Id">
    
    <!-- Schema Markup - Article -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Article",
        "name": "@Model.Title",
        "description": "@(string.IsNullOrEmpty(Model.SeoDescription) ? Model.Summary : Model.SeoDescription)",
        "image": "@(string.IsNullOrEmpty(Model.ImagePath) ? "https://res.cloudinary.com/dbhogeepn/image/upload/v1743859767/mygolden_foood_a25y69.png" : Model.ImagePath)",
        "articleSection": "Donuk Gıda Blog",
        "articleBody": "@Html.Raw(Model.Content.Replace("\"", "\\\"").Replace("\n", " ").Replace("\r", ""))",
        "author": {
            "@@type": "Organization",
            "name": "My Golden Food"
        },
        "publisher": {
            "@@type": "Organization",
            "name": "My Golden Food",
            "logo": {
                "@@type": "ImageObject",
                "url": "https://res.cloudinary.com/dbhogeepn/image/upload/v1743859767/mygolden_foood_a25y69.png"
            }
        },
        "datePublished": "@Model.CreatedDate.ToString("yyyy-MM-ddTHH:mm:ssZ")",
        "dateModified": "@(Model.UpdatedDate?.ToString("yyyy-MM-ddTHH:mm:ssZ") ?? Model.CreatedDate.ToString("yyyy-MM-ddTHH:mm:ssZ"))",
        "mainEntityOfPage": {
            "@@type": "WebPage",
            "@@id": "https://mygoldenfood.com/Blog/Details/@Model.Id"
        }
    }
    </script>
    
    <!-- Schema Markup - Organization -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Organization",
        "name": "My Golden Food",
        "description": "Donuk gıda blog yazıları ve dondurulmuş gıda ürünleri tedarikçisi",
        "url": "https://mygoldenfood.com",
        "logo": "https://res.cloudinary.com/dbhogeepn/image/upload/v1743859767/mygolden_foood_a25y69.png",
        "contactPoint": {
            "@@type": "ContactPoint",
            "telephone": "+90 533 635 24 58",
            "contactType": "Customer Service",
            "areaServed": "TR",
            "availableLanguage": ["Türkçe", "English"]
        }
    }
    </script>
</head>

<!-- Ana H1 Başlık - SEO için kritik -->
<h1 class="seo-main-title" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    @Model.Title | Donuk Gıda Blog Yazısı | Flash Freezing Teknolojisi | My Golden Food
</h1>

<!-- Donuk Gıda Blog Detay SEO Açıklaması (Gizli) -->
<div class="seo-blog-details-info" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    <h2>@Model.Title - Donuk Gıda Blog Yazısı</h2>
    <p>
        <strong>Donuk gıda</strong> sektörü hakkında detaylı bilgi içeren blog yazımız. 
        <strong>Flash Freezing Teknolojisi</strong> ve dondurulmuş gıda ürünleri hakkında 
        kapsamlı bilgiler. <strong>350 gram paketlerde</strong> sunulan ürünlerimiz hakkında 
        detaylı açıklamalar.
    </p>
    <h3>Blog Kategorisi: @Model.Category</h3>
    <p>
        Bu blog yazısı <strong>@Model.Category</strong> kategorisinde yer almaktadır. 
        Donuk gıda sektöründe uzman bilgiler ve güncel gelişmeler.
    </p>
</div>

<!-- Blog Detay Sayfası İçeriği -->
<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Blog")">Blog</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>

            <!-- Blog Başlığı -->
            <h1 class="blog-title mb-4">@Model.Title</h1>

            <!-- Blog Meta Bilgileri -->
            <div class="blog-meta">
                <div class="row">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-user text-primary me-2"></i>
                            <span class="text-muted">@Model.Author</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-calendar text-primary me-2"></i>
                            <span class="text-muted">@Model.CreatedDate.ToString("dd MMMM yyyy")</span>
                        </div>
                        @if (Model.UpdatedDate.HasValue)
                        {
                            <div class="d-flex align-items-center">
                                <i class="fas fa-edit text-primary me-2"></i>
                                <span class="text-muted">Güncellendi: @Model.UpdatedDate.Value.ToString("dd MMMM yyyy")</span>
                            </div>
                        }
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="d-flex align-items-center justify-content-md-end mb-2">
                            <i class="fas fa-eye text-primary me-2"></i>
                            <span class="text-muted">@Model.ViewCount görüntülenme</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Category))
                        {
                            <span class="badge">@Model.Category</span>
                        }
                    </div>
                </div>
            </div>

            <!-- Blog Resmi -->
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="blog-image text-center">
                    <img src="@Model.ImagePath" class="img-fluid" alt="@Model.Title - Donuk Gıda Blog Yazısı" style="max-height: 400px;">
                </div>
            }

            <!-- Blog Özeti -->
            @if (!string.IsNullOrEmpty(Model.Summary))
            {
                <div class="alert alert-info mb-4">
                    <h3 class="h5">Özet</h3>
                    <p class="mb-0">@Model.Summary</p>
                </div>
            }

            <!-- Blog İçeriği -->
            <div class="blog-content">
                @Html.Raw(Model.Content)
            </div>

            <!-- Blog Etiketleri -->
            @if (!string.IsNullOrEmpty(Model.Tags))
            {
                <div class="blog-tags mb-4">
                    <h3 class="h5 mb-3">Etiketler:</h3>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var tag in Model.Tags.Split(','))
                        {
                            <span class="badge bg-secondary">@tag.Trim()</span>
                        }
                    </div>
                </div>
            }

            <!-- Geri Dön Butonu -->
            <div class="text-center mb-5">
                <a href="@Url.Action("Index", "Blog")" class="btn btn-primary">
                    <i class="fas fa-arrow-left me-2"></i>Tüm Blog Yazılarına Dön
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Blog Detay Kategorileri SEO Açıklaması (Gizli) -->
<div class="seo-blog-details-categories" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    <h2>Blog Yazısı Kategorisi ve İçeriği</h2>
    <p>
        Bu blog yazısı <strong>@Model.Category</strong> kategorisinde yer almaktadır. 
        <strong>Donuk gıda</strong> sektörü hakkında detaylı bilgiler ve 
        <strong>Flash Freezing Teknolojisi</strong> açıklamaları içermektedir.
    </p>
</div>

<!-- Modern Blog Details CSS -->
<style>
.blog-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #2c3e50;
    line-height: 1.2;
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.breadcrumb {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 15px;
    padding: 15px 20px;
    margin-bottom: 2rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
}

.breadcrumb-item a {
    color: #007bff;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
}

.breadcrumb-item a:hover {
    color: #0056b3;
}

.blog-content {
    background: #fff;
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    margin-bottom: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.blog-content h2 {
    color: #2c3e50;
    font-weight: 700;
    margin: 2rem 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 3px solid #3498db;
}

.blog-content h3 {
    color: #34495e;
    font-weight: 600;
    margin: 1.5rem 0 1rem 0;
}

.blog-content p {
    color: #555;
    line-height: 1.8;
    margin-bottom: 1rem;
    font-size: 1.1rem;
}

.blog-content ul {
    margin-bottom: 1rem;
}

.blog-content li {
    color: #555;
    line-height: 1.8;
    margin-bottom: 0.5rem;
}

.blog-content strong {
    color: #2c3e50;
    font-weight: 600;
}

.alert-info {
    background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%);
    border: none;
    border-radius: 15px;
    border-left: 5px solid #17a2b8;
    box-shadow: 0 4px 15px rgba(23, 162, 184, 0.1);
}

.badge {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    border: none;
    padding: 8px 16px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 500;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
}

.badge.bg-secondary {
    background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
    box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
}

.blog-tags {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 1.5rem;
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
}

.btn-primary {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    border: none;
    padding: 12px 30px;
    border-radius: 25px;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 123, 255, 0.4);
}

.blog-meta {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 1.5rem;
    border-radius: 15px;
    margin-bottom: 2rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
}

.blog-image {
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    margin-bottom: 2rem;
}

.blog-image img {
    transition: transform 0.3s ease;
}

.blog-image:hover img {
    transform: scale(1.05);
}

/* Responsive Design */
@@media (max-width: 768px) {
    .blog-title {
        font-size: 2rem;
    }
    
    .blog-content {
        padding: 1.5rem;
    }
    
    .blog-meta {
        padding: 1rem;
    }
}

@@media (max-width: 576px) {
    .blog-title {
        font-size: 1.5rem;
    }
    
    .blog-content {
        padding: 1rem;
    }
}
</style>
