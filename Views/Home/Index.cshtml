<style>
    /* Pasta Butonları Stilleri */
    .pasta-button {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 16px 32px;
        background: linear-gradient(135deg, #d9b41b, #e7a400);
        color: #ffffff;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.2rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 8px 25px rgba(217, 180, 27, 0.3);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        border: 2px solid transparent;
    }

    .pasta-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .pasta-button:hover::before {
        left: 100%;
    }

    .pasta-button:hover {
        transform: translateY(-3px) scale(1.05);
        box-shadow: 0 12px 35px rgba(217, 180, 27, 0.4);
        background: linear-gradient(135deg, #e7a400, #d9b41b);
    }

    .pasta-button:active {
        transform: translateY(-1px) scale(1.02);
        box-shadow: 0 6px 20px rgba(217, 180, 27, 0.3);
    }

    .pasta-button i {
        font-size: 1.4rem;
        transition: transform 0.3s ease;
    }

    .pasta-button:hover i {
        transform: scale(1.1) rotate(5deg);
    }

    .pasta-button span {
        position: relative;
        z-index: 1;
    }

    /* Tarifler Butonu Özel Stili */
    .recipes-button {
        background: linear-gradient(135deg, #667eea, #764ba2);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    .recipes-button:hover {
        background: linear-gradient(135deg, #764ba2, #667eea);
        box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
    }

    /* Faydaları Butonu Özel Stili */
    .benefits-button {
        background: linear-gradient(135deg, #f093fb, #f5576c);
        box-shadow: 0 8px 25px rgba(240, 147, 251, 0.3);
    }

    .benefits-button:hover {
        background: linear-gradient(135deg, #f5576c, #f093fb);
        box-shadow: 0 12px 35px rgba(240, 147, 251, 0.4);
    }

    /* Pasta Container Düzenlemeleri */
    .pasta-1 .baslik,
    .pasta-2 .baslik {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    /* Responsive Tasarım */
    @@media (max-width: 768px) {
        .pasta-button {
            padding: 14px 28px;
            font-size: 1.1rem;
            gap: 10px;
        }

        .pasta-button i {
            font-size: 1.2rem;
        }
    }

    @@media (max-width: 480px) {
        .pasta-button {
            padding: 12px 24px;
            font-size: 1rem;
            gap: 8px;
        }

        .pasta-button i {
            font-size: 1.1rem;
        }
    }

    /* Animasyon Efektleri */
    @@keyframes pulse {
        0% {
            box-shadow: 0 8px 25px rgba(217, 180, 27, 0.3);
        }
        50% {
            box-shadow: 0 8px 25px rgba(217, 180, 27, 0.5);
        }
        100% {
            box-shadow: 0 8px 25px rgba(217, 180, 27, 0.3);
        }
    }

    .pasta-button:focus {
        outline: none;
        animation: pulse 2s infinite;
    }

    /* Hover Efektleri için Ek Stiller */
    .pasta-1:hover .pasta-button,
    .pasta-2:hover .pasta-button {
        transform: translateY(-3px) scale(1.05);
    }
    
    /* Lazy Loading İyileştirmesi */
    img[loading="lazy"] {
        opacity: 1;
        transition: opacity 0.3s ease;
    }
    
    img[loading="lazy"].loaded {
        opacity: 1;
    }
    
    /* Placeholder için skeleton loading */
    .image-placeholder {
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 200% 100%;
        animation: loading 1.5s infinite;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #999;
        font-size: 14px;
    }
    
    @@keyframes loading {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }
</style>

<!-- Basit Lazy Loading JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Tüm görselleri hemen görünür yap
    const allImages = document.querySelectorAll('img');
    allImages.forEach(img => {
        img.style.opacity = '1';
        img.classList.add('loaded');
    });
});
</script>
