@model IEnumerable<MyGoldenFood.Models.Blog>
@{
    ViewData["Title"] = "Blog | Donuk Gıda ve Dondurulmuş Gıda Hakkında Bilgiler | My Golden Food";
    Layout = "_Layout";
}

<!-- SEO Meta Etiketleri -->
<head>
    <meta name="description" content="Donuk gıda, dondurulmuş gıda, flash freezing teknolojisi hakkında bilgilendirici blog yazıları. My Golden Food kalitesi ile dondurulmuş gıda sektörü hakkında güncel bilgiler.">
    <meta name="keywords" content="donuk gıda blog, dondurulmuş gıda bilgileri, flash freezing teknolojisi, dondurulmuş meyve sebze, donuk gıda sektörü, my golden food blog">
    <meta name="author" content="My Golden Food">
    <meta name="robots" content="index, follow">
    <meta property="og:title" content="Blog | Donuk Gıda ve Dondurulmuş Gıda Hakkında Bilgiler">
    <meta property="og:description" content="Donuk gıda, dondurulmuş gıda, flash freezing teknolojisi hakkında bilgilendirici blog yazıları.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://mygoldenfood.com/Blog">
    <meta property="og:image" content="https://res.cloudinary.com/dbhogeepn/image/upload/f_auto,q_70,w_1200,fl_immutable_cache/v1743859767/mygolden_foood_a25y69.png">
    <link rel="canonical" href="https://mygoldenfood.com/Blog">
    
    <!-- CSS Grid - Responsive Mobil -->
    <style>
        .blog-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-bottom: 40px;
        }
        
        .blog-grid .blog-card {
            width: auto !important;
            height: auto !important;
        }
        
        /* Samsung SE (375px) - 2'şerli - Kompakt */
        @@media (max-width: 375px) {
            .blog-grid {
                grid-template-columns: repeat(2, 1fr) !important;
                gap: 8px;
            }
            .blog-card {
                padding: 8px !important;
            }
        .image-container {
            height: 150px !important;
            margin-bottom: 8px !important;
        }
            .blog-title {
                font-size: 0.9rem !important;
                margin-bottom: 6px !important;
            }
            .blog-summary {
                font-size: 0.75rem !important;
                margin-bottom: 8px !important;
                -webkit-line-clamp: 1 !important;
            }
            .btn {
                padding: 4px 8px !important;
                font-size: 0.7rem !important;
            }
        }
        
        /* iPhone 14 Pro Max (430px) - 2'şerli - Kompakt */
        @@media (min-width: 376px) and (max-width: 430px) {
            .blog-grid {
                grid-template-columns: repeat(2, 1fr) !important;
                gap: 10px;
            }
            .blog-card {
                padding: 10px !important;
            }
        .image-container {
            height: 170px !important;
            margin-bottom: 10px !important;
        }
            .blog-title {
                font-size: 1rem !important;
                margin-bottom: 8px !important;
            }
            .blog-summary {
                font-size: 0.8rem !important;
                margin-bottom: 10px !important;
                -webkit-line-clamp: 2 !important;
            }
            .btn {
                padding: 6px 12px !important;
                font-size: 0.8rem !important;
            }
        }
        
        /* Tablet (768px) - 2'şerli - Normal */
        @@media (min-width: 431px) and (max-width: 768px) {
            .blog-grid {
                grid-template-columns: repeat(2, 1fr) !important;
                gap: 15px;
            }
            .blog-card {
                padding: 12px !important;
            }
        .image-container {
            height: 190px !important;
            margin-bottom: 12px !important;
        }
        }
        
        /* Desktop (992px+) - 3'lü */
        @@media (min-width: 992px) {
            .blog-grid {
                grid-template-columns: repeat(3, 1fr) !important;
                gap: 20px;
            }
        }
    </style>
    
    <!-- Schema Markup - Blog Collection -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "ItemList",
        "name": "My Golden Food Blog Yazıları",
        "description": "Donuk gıda ve dondurulmuş gıda sektörü hakkında bilgilendirici blog yazıları",
        "url": "https://mygoldenfood.com/Blog",
        "numberOfItems": "@Model.Count()",
        "itemListElement": [
            @{
                for (int i = 0; i < Model.Count(); i++)
                {
                    var blog = Model.ElementAt(i);
                    <text>
                    {
                        "@@type": "ListItem",
                        "position": @(i + 1),
                        "item": {
                            "@@type": "Article",
                            "name": "@blog.Title",
                            "description": "@blog.Summary",
                            "image": "@(string.IsNullOrEmpty(blog.ImagePath) ? "" : blog.ImagePath)",
                            "articleSection": "Donuk Gıda Blog",
                            "author": {
                                "@@type": "Organization",
                                "name": "My Golden Food"
                            },
                            "publisher": {
                                "@@type": "Organization",
                                "name": "My Golden Food",
                                "logo": {
                                    "@@type": "ImageObject",
                                    "url": "https://res.cloudinary.com/dbhogeepn/image/upload/v1743859767/mygolden_foood_a25y69.png"
                                }
                            },
                            "datePublished": "@blog.CreatedDate.ToString("yyyy-MM-dd")",
                            "dateModified": "@(blog.UpdatedDate?.ToString("yyyy-MM-dd") ?? blog.CreatedDate.ToString("yyyy-MM-dd"))"
                        }
                    }@(i < Model.Count() - 1 ? "," : "")
                    </text>
                }
            }
        ]
    }
    </script>
    
    <!-- Schema Markup - Organization -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Organization",
        "name": "My Golden Food",
        "description": "Donuk gıda blog yazıları ve dondurulmuş gıda ürünleri tedarikçisi",
        "url": "https://mygoldenfood.com",
        "logo": "https://res.cloudinary.com/dbhogeepn/image/upload/v1743859767/mygolden_foood_a25y69.png",
        "contactPoint": {
            "@@type": "ContactPoint",
            "telephone": "+90 533 635 24 58",
            "contactType": "Customer Service",
            "areaServed": "TR",
            "availableLanguage": ["Türkçe", "English"]
        }
    }
    </script>
</head>

<!-- Ana H1 Başlık - SEO için kritik -->
<h1 class="seo-main-title" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    My Golden Food Blog | Donuk Gıda ve Dondurulmuş Gıda Sektörü Hakkında Bilgilendirici Yazılar | Flash Freezing Teknolojisi
</h1>

<!-- Donuk Gıda Blog SEO Açıklaması (Gizli) -->
<div class="seo-blog-info" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    <h2>Donuk Gıda Sektörü Hakkında Bilgilendirici Blog Yazıları</h2>
    <p>
        <strong>Donuk gıda</strong> sektörü hakkında güncel bilgiler, <strong>Flash Freezing Teknolojisi</strong> 
        ve dondurulmuş gıda ürünleri ile ilgili detaylı blog yazılarımızı keşfedin. 
        <strong>350 gram paketlerde</strong> sunulan ürünlerimiz hakkında bilgilendirici içerikler.
    </p>
    <h3>Blog Kategorileri</h3>
    <p>
        Donuk gıda teknolojisi, sağlık faydaları, kullanım rehberleri ve sektör güncellemeleri 
        hakkında kapsamlı blog yazılarımız ile donuk gıda sektöründe bilgi sahibi olun.
    </p>
</div>

<!-- Blog Ana Sayfa İçeriği -->
<div class="container" style="margin-top: 100px;">
    <div class="title-container">
        <h2 class="text-center text-white">Blog</h2>
        <p class="text-center text-white lead">Donuk gıda ve dondurulmuş gıda sektörü hakkında bilgilendirici yazılarımızı keşfedin</p>
    </div>

    @if (Model.Any())
    {
        <div class="blog-grid" id="blogGrid">
            @foreach (var blog in Model)
            {
                <div class="blog-card">
                    <div class="image-container"
                         data-title="@blog.Title"
                         data-summary="@blog.Summary"
                         data-category="@blog.Category"
                         data-date="@blog.CreatedDate.ToString("dd MMM yyyy")"
                         data-views="@blog.ViewCount">
                        @if (!string.IsNullOrEmpty(blog.ImagePath))
                        {
                            var cloudinaryService = ViewBag.CloudinaryService as MyGoldenFood.Services.CloudinaryService;
                            <picture>
                                <source media="(max-width: 768px)" 
                                        srcset="@cloudinaryService?.GetMobileImageUrl(blog.ImagePath)">
                                <source media="(max-width: 1200px)" 
                                        srcset="@cloudinaryService?.GetTabletImageUrl(blog.ImagePath)">
                                <img src="@cloudinaryService?.GetDesktopImageUrl(blog.ImagePath)" 
                                     alt="@blog.Title | Donuk Gıda Blog Yazısı | My Golden Food" 
                                     class="blog-image"
                                     title="@blog.Title - Donuk Gıda Blog Yazısı"
                                     loading="lazy" />
                            </picture>
                        }
                        else
                        {
                            <div class="blog-placeholder">
                                <i class="fas fa-newspaper"></i>
                            </div>
                        }
                        
                        <!-- Category Badge -->
                     @*    <div class="category-badge">
                            <span class="badge">@blog.Category</span>
                        </div> *@
                    </div>
                    
                    <div class="blog-content">
                        
                        <h3 class="blog-title">@blog.Title</h3>
                        
                        @if (!string.IsNullOrEmpty(blog.Summary))
                        {
                            <p class="blog-summary">@blog.Summary</p>
                        }
                        
                        <div class="blog-actions">
                            <a href="@Url.Action("Details", "Blog", new { id = blog.Id })" class="btn btn-primary">
                                Devamını Oku
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-newspaper"></i>
            </div>
            <h3>Henüz blog yazısı bulunmuyor</h3>
            <p>Yakında donuk gıda sektörü hakkında bilgilendirici blog yazılarımız yayınlanacak.</p>
        </div>
    }
</div>

<!-- Blog Kategorileri SEO Açıklaması (Gizli) -->
<div class="blog-categories-info" style="position: absolute; left: -9999px; width: 1px; height: 1px; overflow: hidden;">
    <h3>Blog Kategorileri ve Konuları</h3>
    <div class="row">
        <div class="col-md-4 text-center mb-3">
            <h4>🔬 Flash Freezing Teknolojisi</h4>
            <p>Donuk gıda sektöründe kullanılan en gelişmiş dondurma teknolojisi hakkında detaylı bilgiler.</p>
        </div>
        <div class="col-md-4 text-center mb-3">
            <h4>💚 Sağlık Faydaları</h4>
            <p>Dondurulmuş gıdaların besin değeri ve sağlık açısından avantajları.</p>
        </div>
        <div class="col-md-4 text-center mb-3">
            <h4>📦 350 Gram Paket Avantajları</h4>
            <p>Küçük paketlerde sunulan ürünlerin kullanım kolaylığı ve avantajları.</p>
        </div>
    </div>
</div>

<style>
    .content {
        flex: 1;
        padding-top: 6%;
    }

    /* Blog Sayfası Ana Stilleri */
    .blog-page {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }

    /* Başlık Konteyner */
    .title-container {
        margin-top: 30px;
        margin-bottom: 30px;
        text-align: center;
    }

    .title-container h2 {
        font-size: 3.5rem;
        font-weight: 800;
        text-transform: uppercase;
        color: #FFF;
        margin-bottom: 15px;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .title-container .lead {
        font-size: 1.3rem;
        color: #FFF;
        opacity: 0.9;
        font-weight: 500;
    }

    /* BLOG CONTAINER - GOOGLE'DAN BULUNAN ÇÖZÜM */
    #blogGrid {
        margin-bottom: 40px;
    }

    /* Blog Kartları - Küçük ve Kompakt */
    .blog-card {
        @* background: linear-gradient(145deg, #2a2a2a, #1f1f1f); *@
        border-radius: 20px;
        padding: 15px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
    }

    .blog-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.6);
        border-color: rgba(102, 126, 234, 0.3);
    }

    /* Resim Konteyner - Büyük */
    .image-container {
        position: relative;
        width: 100%;
        height: 220px;
        overflow: hidden;
        cursor: pointer;
        border-radius: 15px;
        box-sizing: border-box;
    }

    .blog-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.3s ease;
       /* background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);*/
       /* padding: 10px;*/
        border-radius: 15px;
    }

    .image-container:hover .blog-image {
        transform: scale(1.05);
        filter: brightness(1.1) contrast(1.05);
    }

    .image-container::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .image-container:hover::after {
        opacity: 1;
    }

    .blog-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.1);
        color: #ffffff;
        font-size: 3rem;
        border: 2px dashed rgba(255, 255, 255, 0.3);
        border-radius: 15px;
    }

    /* Kategori Badge */
    .category-badge {
        position: absolute;
        top: 15px;
        right: 15px;
    }

    .badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
    }

    /* Blog İçerik - Dark Mode */
    .blog-content {
        padding: 25px;
        background: rgba(0, 0, 0, 0.2);
    }

    /* Meta Bilgiler */
    .blog-meta {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        font-size: 0.9rem;
        color: #a0a0a0;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .meta-item i {
        color: #667eea;
    }

    /* Blog Başlık */
    .blog-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 10px;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Blog Özet */
    .blog-summary {
        color: #d0d0d0;
        font-size: 0.85rem;
        line-height: 1.5;
        margin-bottom: 15px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Blog Aksiyonlar */
    .blog-actions {
        text-align: center;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.5);
        position: relative;
        overflow: hidden;
    }

    .btn-primary::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .btn-primary:hover::before {
        left: 100%;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.6);
        color: white;
        text-decoration: none;
    }

    .btn-primary i {
        transition: transform 0.3s ease;
    }

    .btn-primary:hover i {
        transform: translateX(5px);
    }

    /* Boş Durum - Dark Mode */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: white;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
    }

    .empty-icon {
        font-size: 4rem;
        color: #667eea;
        margin-bottom: 20px;
        text-shadow: 0 0 20px rgba(102, 126, 234, 0.5);
    }

    .empty-state h3 {
        font-size: 1.8rem;
        margin-bottom: 15px;
        font-weight: 600;
        color: #ffffff;
    }

    .empty-state p {
        font-size: 1.1rem;
        color: #d0d0d0;
    }

    /* SEO Açıklama Stilleri */
    .seo-blog-info h2 {
        font-size: 1.8rem;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    }

    .seo-blog-info p {
        font-size: 1.1rem;
        font-weight: 500;
    }

    .blog-categories-info h3 {
        font-size: 1.6rem;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    }

    .blog-categories-info h4 {
        font-weight: 600;
        margin-bottom: 10px;
    }

    .blog-categories-info p {
        line-height: 1.5;
    }

    /* Responsive Tasarım */
    @@media (max-width: 768px) {
        .blog-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .title-container h2 {
            font-size: 2.5rem;
        }

        .title-container .lead {
            font-size: 1.1rem;
        }

        .blog-content {
            padding: 0;
        }

        .blog-title {
            font-size: 1.2rem;
        }

        .image-container {
            height: 300px;
        }
    }

    @@media (max-width: 480px) {
        .title-container h2 {
            font-size: 2rem;
        }

        .blog-meta {
            flex-direction: column;
            gap: 10px;
            align-items: flex-start;
        }

        .btn-primary {
            padding: 10px 20px;
            font-size: 0.9rem;
        }

        .image-container {
            height: 280px;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Blog kartlarına hover efekti
        const blogCards = document.querySelectorAll('.blog-card');
        
        blogCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Resim tıklama efekti
        const imageContainers = document.querySelectorAll('.image-container');
        
        imageContainers.forEach(container => {
            container.addEventListener('click', function() {
                // Tıklanan resmi büyüt
                this.style.transform = 'scale(1.05)';
                
                // 300ms sonra normal boyuta döndür
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 300);
            });
        });
    });
</script>

