@model IEnumerable<MyGoldenFood.Models.BenefitCategory>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Görsel</th>
                <th>Kategori Adı</th>
                <th>Seviye</th>
                <th>Ana Kategori</th>
                <th>Sıralama</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @* Sadece ana kategorileri göster *@
                @foreach (var category in Model.Where(c => c.Level == 0).OrderBy(c => c.SortOrder).ThenBy(c => c.Name))
                {
                    @* Ana Kategori *@
                    <tr class="table-primary">
                        <td>@category.Id</td>
                        <td>
                            @if (!string.IsNullOrEmpty(category.ImagePath))
                            {
                                <img src="@category.ImagePath" alt="@category.Name" style="width: 50px; height: 50px; object-fit: cover;" class="img-thumbnail" />
                            }
                            else
                            {
                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-image"></i>
                                </div>
                            }
                        </td>
                        <td>
                            <strong>@category.Name</strong>
                        </td>
                        <td>
                            <span class="badge bg-primary">Ana Kategori</span>
                        </td>
                        <td>
                            <span class="text-muted">-</span>
                        </td>
                        <td>@category.SortOrder</td>
                        <td>
                            <button class="btn btn-sm btn-primary" onclick="editBenefitCategory(@category.Id)">
                                <i class="fas fa-edit"></i> Düzenle
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="deleteBenefitCategory(@category.Id)">
                                <i class="fas fa-trash"></i> Sil
                            </button>
                        </td>
                    </tr>
                    
                    @* Alt Kategoriler *@
                    @if (category.ChildCategories != null && category.ChildCategories.Any())
                    {
                        @foreach (var childCategory in category.ChildCategories.OrderBy(c => c.SortOrder).ThenBy(c => c.Name))
                        {
                            <tr class="table-light">
                                <td>@childCategory.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(childCategory.ImagePath))
                                    {
                                        <img src="@childCategory.ImagePath" alt="@childCategory.Name" style="width: 50px; height: 50px; object-fit: cover;" class="img-thumbnail" />
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <span class="text-muted">└─ </span>@childCategory.Name
                                </td>
                                <td>
                                    <span class="badge bg-secondary">Alt Kategori</span>
                                </td>
                                <td>
                                    @category.Name
                                </td>
                                <td>@childCategory.SortOrder</td>
                                <td>
                                    <button class="btn btn-sm btn-primary" onclick="editBenefitCategory(@childCategory.Id)">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteBenefitCategory(@childCategory.Id)">
                                        <i class="fas fa-trash"></i> Sil
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">
                        <i class="fas fa-info-circle"></i> Henüz kategori eklenmemiş.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function editBenefitCategory(id) {
        $.get('/Faydalari/EditCategory/' + id, function(data) {
            $('#modal .modal-content').html(data);
            $('#modal').modal('show');
        });
    }

    function deleteBenefitCategory(id) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu kategori kalıcı olarak silinecek!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                $.post('/Faydalari/DeleteCategory', { id: id }, function(response) {
                    if (response.success) {
                        Swal.fire('Başarılı!', response.message, 'success');
                        loadBenefitCategoryList();
                    } else {
                        Swal.fire('Hata!', response.message, 'error');
                    }
                });
            }
        });
    }
</script>