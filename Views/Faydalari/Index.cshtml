    .benefit-grid:has(.benefit-card:nth-child(1):nth-last-child(2)) {
        display: flex;
        justify-content: start;
        gap: 20px;
    }

    /* Benefit Cards */
    .benefit-card {
        overflow: hidden;
        text-align: center;
        border-radius: 15px;
