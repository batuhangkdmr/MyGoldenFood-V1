@model IEnumerable<MyGoldenFood.Models.BenefitCategory>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Görsel</th>
                <th>Kategori Adı</th>
                <th>Açıklama</th>
                <th>Fayda Sayısı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>
                        @if (!string.IsNullOrEmpty(category.ImagePath))
                        {
                            <img src="@category.ImagePath" alt="@category.Name" style="width: 50px; height: 50px; object-fit: cover;" class="img-thumbnail" />
                        }
                        else
                        {
                            <span class="text-muted">Görsel yok</span>
                        }
                    </td>
                    <td>@category.Name</td>
                    <td>@(string.IsNullOrEmpty(category.Description) ? "Açıklama yok" : category.Description)</td>
                    <td>@category.Benefits.Count</td>
                    <td>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-sm btn-primary" onclick="loadEditForm('/Faydalari/EditCategory/@category.Id')">
                                <i class="fas fa-edit"></i> Düzenle
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteBenefitCategory(@category.Id)">
                                <i class="fas fa-trash"></i> Sil
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="text-center text-muted py-4">
        <i class="fas fa-info-circle fa-3x mb-3"></i>
        <p>Henüz fayda kategorisi eklenmemiş.</p>
    </div>
}

<script>
    function deleteBenefitCategory(id) {
        Swal.fire({
            title: "Emin misiniz?",
            text: "Bu kategoriyi silmek istediğinizden emin misiniz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/Faydalari/DeleteCategory",
                    type: "POST",
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire("Silindi!", response.message, "success");
                            location.reload();
                        } else {
                            Swal.fire("Hata!", response.message, "error");
                        }
                    },
                    error: function () {
                        Swal.fire("Hata!", "Kategori silinirken bir hata oluştu.", "error");
                    }
                });
            }
        });
    }
</script>
