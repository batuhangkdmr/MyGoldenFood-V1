@model IEnumerable<MyGoldenFood.Models.Benefit>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var benefit in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="benefit-card">
                    @if (!string.IsNullOrEmpty(benefit.ImagePath))
                    {
                        <img src="@benefit.ImagePath" alt="@benefit.Name" class="benefit-image" />
                    }
                    else
                    {
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center benefit-image">
                            <i class="fas fa-heart fa-3x"></i>
                        </div>
                    }
                    
                    <h4 class="text-white mb-3">@benefit.Name</h4>
                    
                    <p class="text-muted mb-3">
                        @if (!string.IsNullOrEmpty(benefit.Content) && benefit.Content.Length > 100)
                        {
                            @(benefit.Content.Substring(0, 100) + "...")
                        }
                        else
                        {
                            @benefit.Content
                        }
                    </p>
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-primary">@benefit.BenefitCategory?.Name</span>
                        <a href="/Faydalari/Details/@benefit.Id" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-eye"></i> Detaylar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center text-muted py-5">
        <i class="fas fa-info-circle fa-3x mb-3"></i>
        <h4>Bu kategoride henüz fayda bulunmuyor</h4>
        <p>Yakında faydaları eklenecek!</p>
    </div>
}
